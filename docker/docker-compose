version: '2.1'

services:
  source-db:
    image: postgres
    restart: always
#    DO NOT USE VOLUMES ON WINDOWS  #PROBLEMS !!!
#    volumes:
#      - ./postgres-source:/var/lib/postgresql/data
    environment:
      POSTGRES_PASSWORD: password
    ports:
    - '5533:5432'
    networks:
      - 'net'
  target-db:
    image: postgres
    restart: always
#    DO NOT USE VOLUMES ON WINDOWS  #PROBLEMS !!!
#    volumes:
#      - ./postgres-target:/var/lib/postgresql/data
    environment:
      POSTGRES_PASSWORD: password
    ports:
      - '5544:5432'
    networks:
      - 'net'
  zookeeper:
    container_name: cluster_zookeeper
    image: wurstmeister/zookeeper
    ports:
      - "2181:2181"
    networks:
      - 'net'
  kafka:
    image: wurstmeister/kafka
    hostname: kafka
    environment:
      KAFKA_BROKER_ID: 1
      KAFKA_ZOOKEEPER_CONNECT: zookeeper:2181
      KAFKA_LISTENERS:
        "INTERNAL://kafka:9090,\
         EXTERNAL://dockervm:9092"
      KAFKA_ADVERTISED_LISTENERS:
        "INTERNAL://kafka:9090,\
         EXTERNAL://dockervm:9092"
      KAFKA_LISTENER_SECURITY_PROTOCOL_MAP:
        "INTERNAL:PLAINTEXT,\
         EXTERNAL:PLAINTEXT"
      KAFKA_INTER_BROKER_LISTENER_NAME: INTERNAL
      KAFKA_MESSAGE_MAX_BYTES: 2000000
      KAFKA_CREATE_TOPICS: "clients:1:1"
    ports:
      - "9092:9092"
    networks:
      - 'net'
    depends_on:
      - zookeeper
    command: [start-kafka.sh]
networks:
  net:

